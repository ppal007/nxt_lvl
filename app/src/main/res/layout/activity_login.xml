<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    android:background="@color/gray"
    tools:context=".activity.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/login"
        android:layout_height="0dp"
        android:layout_weight="3.8">
        <ImageView
            android:id="@+id/login_logo"
            android:src="@drawable/splast_logo"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:src="@drawable/tato_st_login"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/login_logo"
            android:layout_marginStart="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/tv_login_title"
            android:src="@drawable/login_title"
            android:layout_marginBottom="16dp"
            android:layout_above="@+id/et_login_user_name"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/et_login_user_name"
            android:hint="Username"
            android:textColorHint="@color/hint"
            android:background="@drawable/edit_txt_layout"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:drawableEnd="@drawable/ic_user"
            android:drawablePadding="12dp"
            android:inputType="textPersonName"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2">
        <EditText
            android:id="@+id/et_login_user_pass"
            android:hint="Pass"
            android:inputType="textWebPassword"
            android:textColorHint="@color/hint"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:background="@drawable/edit_txt_layout"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:drawableEnd="@drawable/ic_baseline_visibility_off_24"
            android:drawablePadding="12dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:id="@+id/relative_layout_login"
            android:layout_below="@+id/et_login_user_pass"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="20sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/linear_layout_s_log"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="50dp"
                android:layout_width="250dp"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_signUp"
                    android:text="SIGNUP"
                    android:textAllCaps="true"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:textColor="@color/hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/img_view_login_button"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/linear_layout_s_log"
                android:scaleType="fitEnd"
                android:src="@drawable/login_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>